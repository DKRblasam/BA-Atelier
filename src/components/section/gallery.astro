---
import GalleryItem from "@itm/GalleryItem.astro";

const galleryItems = [
  {
    id: 1,
    image: "photo-1460925895917-afdab827c52f",
    title: "Colección Primavera,",
    category: "Alta Costura,",
    gradient: "#1d3557",
  },
  {
    id: 2,
    image: "photo-1487058792275-0ad4aaf24ca7",
    title: "Vestidos de Noche,",
    category: "Eventos",
    gradient: "#2a9d8f",
  },
  {
    id: 3,
    image: "photo-1488590528505-98d2b5aba04b",
    title: "Trajes Ejecutivos,",
    category: "Formal,",
    gradient: "#e5989b",
  },
  {
    id: 4,
    image: "photo-1649972904349-6e44c42644a7",
    title: "Accesorios Únicos,",
    category: "Complementos",
    gradient: "#14213d",
  },
  {
    id: 5,
    image: "photo-1581091226825-a6a2a5aee158",
    title: "Colección Verano,",
    category: "Casual Elegance,",
    gradient: "#22223b",
  },
  {
    id: 6,
    image: "photo-1486312338219-ce68d2c6f44d",
    title: "Piezas Exclusivas,",
    category: "Edición Limitada,",
    gradient: "#003566",
  },
];
---

<!-- components/Gallery.astro -->
<section id="gallery" class="py-24 warm-gradient">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20 animate-fade-in-up">
      <h2 class="font-dancing text-6xl font-bold text-warm-brown mb-6">
        Nuestra <span class="text-accent-brown">Galería</span>
      </h2>
      <p class="text-xl text-warm-brown/70 max-w-3xl mx-auto font-inter">
        Descubre algunas de nuestras creaciones más exclusivas y trabajos
        personalizados
      </p>
      <div class="mt-10 flex items-center justify-center">
        <div class="w-16 h-px bg-accent-brown/30"></div>
        <div class="mx-6 w-3 h-3 bg-accent-brown rounded-full"></div>
        <div class="w-16 h-px bg-accent-brown/30"></div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        galleryItems.map((item, index) => (
          <GalleryItem {...item} index={index} />
        ))
      }

      
    </div>
    <div
      class="text-center mt-20 animate-fade-in-up hover:bg-[#00356667] w-max m-auto rounded-2xl"
      style="animation-delay: 1s"
    >
      <button
        class="px-12 py-4 border-2 border-accent-brown text-accent-brown font-semibold rounded-2xl hover:bg-accent-brown hover:text-white transition-all duration-300 hover-lift font-inter"
      >
        Ver Toda la Galería
      </button>
    </div>
  </div>
</section>
